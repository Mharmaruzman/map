<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentGuide.Pages.Home"
    NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions=".05*,.05*" Margin="10">

        <Image Source= "sab.png" Grid.RowSpan="3" Aspect="Fill">
        </Image>
        <VerticalStackLayout
            VerticalOptions="Start"   HorizontalOptions="Start" Grid.Row="1" >
            <Border
                
             Rotation="90"
             VerticalOptions="Start"
             HeightRequest="70"
             WidthRequest="200"
             StrokeThickness="5"            
             StrokeShape="RoundRectangle 30, 30, 30, 30"
            Background="maroon" 
             Margin="-50,-50,0,10"
               >

                <Button Clicked="ButtonClicked" FontSize="20" 
                        BackgroundColor="Transparent" TextColor="White" 
                        FontAttributes="Bold" Text="Get Started">

                </Button>
            </Border>
        </VerticalStackLayout>
    </Grid>



</ContentPage>
